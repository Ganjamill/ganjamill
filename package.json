{
  "name": "ganjamill",
  "version": "11.13.0",
  "private": true,
  "author": "REDQ",
  "workspaces": [
    "admin/*",
    "shop"
  ],
  "scripts": {
    "clean": "yarn workspaces run rimraf \"{.next,node_modules,__generated__,.cache}\" && rimraf node_modules",
    "dev:all": "yarn shop:dev:rest && yarn admin:dev:rest",
    "build:all": "yarn shop:build:rest && yarn admin:build:rest",
    "start:all": "yarn shop:start:rest && yarn admin:start:rest",

    "shop:dev": "yarn workspace @ganjamill/shop dev:rest",
    "shop:build": "yarn workspace @ganjamill/shop build:rest",
    "shop:start": "yarn workspace @ganjamill/shop start",

    "admin:dev": "yarn workspace @marvel/admin-rest dev",
    "admin:build": "yarn workspace @marvel/admin-rest build",
    "admin:start": "yarn workspace @marvel/admin-rest start",

    "prepare": "husky install",
    "lint": "yarn workspaces run eslint --ext .js,.ts,.tsx src/"
  },
  "engines": {
    "node": ">=16.0.0",
    "yarn": ">=1.22.0"
  },
  "devDependencies": {
    "husky": "^7.0.1",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "eslint": "^8.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0"
  },
  "lint-staged": {
    "*.{js,ts,tsx,md,css}": [
      "prettier --write"
    ]
  }
}
